                    .d-grid.gap-2.d-block.d-lg-none
                        button.btn#transferButton.rounded-1.me-lg-2.py-2.px-lg-3 Chuyển khoản
                        button.btn#checkButton.rounded-1.py-2.px-lg-3 Ví của tôi
                    .d-none.d-lg-block
                        button.btn#transferButton.rounded-1d-inline.me-lg-2.py-2.px-lg-3
