                            | Tạo giao dịch
                        a(href="/" target="_blank").text-decoration-none
                            button.btn#checkButton.rounded-1.d-inline.py-2.px-lg-3
                                i.bi.bi-wallet2.me-2
                                | Ví của tôi
                else
                    .btn-group.w-100
                        a(href = "/login").btn.btn-outline-light.rounded-0.py-2 Đăng nhập
                        a(href = "/createwallet").btn.btn-light.rounded-0.py-2 Tạo ví mới

script.
    const navPositionHandler = () => {
        const position = $(window).scrollTop();
        if (position > 0) {
            $('#mainNav').css('background', '#101010');
            $('#mainNav').css('box-shadow', '0px 0.5px 5px black');
        }
        else {
            $('#mainNav').css('background', 'rgb(0,0,0, 0.4)');
            $('#mainNav').css('box-shadow', 'none');
        }
    }

    $(window).scroll(() => {
        navPositionHandler();
    });

    $(document).ready(() => {
        $('.navbar-toggler').click(function(){
            if ($(this).hasClass('collapsed')) {
                navPositionHandler();
            }
            else {
                $('#mainNav').css('background', '#101010');
                $('#mainNav').css('box-shadow', '0px 0.5px 5px black');
            }
        })
    })